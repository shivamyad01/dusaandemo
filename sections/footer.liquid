<footer style="background-color: {{ section.settings.footer_bg_color }};">
  <div class="wrapper">
    <div class="new_footer container">
      <div class="row">

        <!-- Logo, Description & Social Icons -->
        <div class="col-md-3 footer-logo-col">
          {% if section.settings.footer_logo != blank %}
          <div class="footer_logo">
            <img src="{{ section.settings.footer_logo | image_url }}" alt="Footer Logo">
          </div>
          {% endif %}

          {% if section.settings.footer_description != blank %}
          <p class="footer_description">{{ section.settings.footer_description }}</p>
          {% endif %}

          <div class="social_icons">
            {% if section.settings.facebook_url != blank %}
            <a href="{{ section.settings.facebook_url }}" target="_blank" aria-label="Facebook">
              <svg width="20" height="20" fill="#fff" viewBox="0 0 24 24"><path d="M22,12A10,10,0,1,0,10.89,21.94V14.89H8V12h2.89V9.79c0-2.85,1.7-4.43,4.3-4.43a17.51,17.51,0,0,1,2.55.22V8.38H16.84c-1.41,0-1.84.87-1.84,1.76V12h3.14l-.5,2.89H15V21.94A10,10,0,0,0,22,12Z"/></svg>
            </a>
            {% endif %}
            {% if section.settings.instagram_url != blank %}
            <a href="{{ section.settings.instagram_url }}" target="_blank" aria-label="Instagram">
              <svg width="20" height="20" fill="#fff" viewBox="0 0 24 24"><path d="M7.75,2A5.76,5.76,0,0,0,2,7.75v8.5A5.76,5.76,0,0,0,7.75,22h8.5A5.76,5.76,0,0,0,22,16.25v-8.5A5.76,5.76,0,0,0,16.25,2Zm8.5,2A3.76,3.76,0,0,1,20,7.75v8.5A3.76,3.76,0,0,1,16.25,20H7.75A3.76,3.76,0,0,1,4,16.25v-8.5A3.76,3.76,0,0,1,7.75,4ZM12,7.1A4.9,4.9,0,1,0,16.9,12,4.91,4.91,0,0,0,12,7.1Zm0,7.8A2.9,2.9,0,1,1,14.9,12,2.91,2.91,0,0,1,12,14.9Zm5.2-7.9a1.1,1.1,0,1,1-1.1-1.1A1.1,1.1,0,0,1,17.2,7Z"/></svg>
            </a>
            {% endif %}
          </div>
        </div>

        <!-- Menu and Text Blocks -->
        {% for block in section.blocks %}
          {% if block.type == "menu" %}
            <div class="col-md-3">
              {% if block.settings.menu_title != blank %}
              <h2 class="menu_title">{{ block.settings.menu_title }}</h2>
              {% endif %}
              <ul>
                {% for link in linklists[block.settings.Footer_menu].links %}
                <li class="footer-link">
                  <a href="{{ link.url }}">{{ link.title }}</a>
                </li>
                {% endfor %}
              </ul>
            </div>
          {% endif %}

          {% if block.type == "text" %}
            <div class="col-md-3">
              {% if block.settings.menu_title_text != blank %}
              <h2 class="menu_title">{{ block.settings.menu_title_text }}</h2>
              {% endif %}
              <div class="f_content_box">
                {% if block.settings.f_content_box != blank %}
                <p>{{ block.settings.f_content_box }}</p>
                {% endif %}
                {% if block.settings.mail != blank %}
                <a href="mailto:{{ block.settings.mail }}">{{ block.settings.mail }}</a>
                {% endif %}
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>

    <!-- Copyright -->
    {% if section.settings.copyright_text != blank %}
    <div class="copyright_text">
      <p class="copyright">{{ section.settings.copyright_text }}</p>
    </div>
    {% endif %}
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "image_picker",
      "id": "footer_logo",
      "label": "Footer Logo"
    },
    {
      "type": "textarea",
      "id": "footer_description",
      "label": "Logo Description"
    },
    {
      "type": "url",
      "id": "facebook_url",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL"
    },
    {
      "type": "color",
      "id": "footer_bg_color",
      "label": "Footer Background Color",
      "default": "#00833e"
    },
    {
      "type": "textarea",
      "id": "copyright_text",
      "label": "Copyright Text"
    }
  ],
  "blocks": [
    {
      "type": "menu",
      "name": "Footer Menu",
      "settings": [
        {
          "type": "text",
          "id": "menu_title",
          "label": "Heading"
        },
        {
          "type": "link_list",
          "id": "Footer_menu",
          "label": "Menu"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text Content",
      "settings": [
        {
          "type": "text",
          "id": "menu_title_text",
          "label": "Heading"
        },
        {
          "type": "textarea",
          "id": "f_content_box",
          "label": "Text"
        },
        {
          "type": "text",
          "id": "mail",
          "label": "Email"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Enhanced Footer",
      "category": "Footer"
    }
  ]
}
{% endschema %}

{% style %}
footer {
  color: #fff;
}
.wrapper {
  max-width: 1440px;
  margin: 0 auto;
  padding: 0 15px;
}
.new_footer {
  padding: 60px 0;
}
.new_footer .row {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

/* === LEFT LOGO COLUMN === */
.footer-logo-col {
  width: 100%;
  max-width: 25%;
  padding: 0 15px;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.footer_logo img {
  max-width: 180px;
  margin-bottom: 10px;
}
.footer_description {
  color: #fff;
  font-size: 14px;
  margin-bottom: 10px;
  line-height: 1.5;
  word-break: break-word;
}
.social_icons {
  margin-top: 10px;
}
.social_icons a {
  display: inline-block;
  margin-right: 10px;
  transition: transform 0.3s ease;
}
.social_icons a:hover {
  transform: scale(1.1);
}

/* === MENU COLUMN === */
.col-md-3 {
  width: 25%;
  padding: 0 15px;
}
.menu_title {
  margin-bottom: 10px;
  font-size: 18px;
  font-weight: 600;
  position: relative;
}
.menu_title::after {
  content: "";
  position: absolute;
  width: 40px;
  height: 2px;
  bottom: -5px;
  left: 0;
  background: #fff;
}
ul {
  list-style: none;
  margin-top: 15px;
  padding: 0;
}
.footer-link {
  font-size: 15px;
  margin-bottom: 10px;
}
.footer-link a {
  color: #fff;
  text-decoration: none;
  transition: color 0.3s;
}
.footer-link a:hover {
  color: #ddd;
}
.f_content_box p,
.f_content_box a {
  color: #fff;
  font-size: 14px;
}

/* === COPYRIGHT === */
.copyright_text {
  text-align: center;
  padding: 20px 0;
  border-top: 1px solid rgba(255,255,255,0.3);
}
.copyright {
  font-size: 13px;
  margin: 0;
  color: #fff;
}

/* === RESPONSIVE === */
@media (max-width: 992px) {
  .col-md-3,
  .footer-logo-col {
    width: 50%;
    margin-bottom: 30px;
    align-items: center;
    text-align: center;
  }
  .footer-logo-col {
    align-items: center;
  }
}

@media (max-width: 768px) {
  .col-md-3,
  .footer-logo-col {
    width: 100%;
  }
  .footer_logo img {
    margin: 0 auto 15px auto;
  }
  .footer_description {
    text-align: center;
  }
  .social_icons {
    text-align: center;
  }
}
{% endstyle %}


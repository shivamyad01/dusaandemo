<div class="custom-section">
  <h2>{{ section.settings.heading }}</h2>
  <p>{{ section.settings.description }}</p>
</div>

{% schema %}
{
  "name": "Custom Text Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to Our Page"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "This is a custom page with dynamic content."
    }
  ],
  "presets": [
    {
      "name": "Custom Text"
    }
  ]
}
{% endschema %}
